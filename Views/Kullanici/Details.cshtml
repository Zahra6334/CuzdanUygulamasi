@model CuzdanUygulamasi.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Detayları";
    
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background-color: #fff0f0; /* Açık kırmızı arkaplan */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .detail-card {
            max-width: 800px;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.1);
            border: none;
        }

        .card-header {
            background: linear-gradient(135deg, #dc3545, #bb2d3b);
            color: white;
            border-radius: 10px 10px 0 0 !important;
        }

        .detail-item {
            padding: 15px 0;
            border-bottom: 1px solid #f1aeb5;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        dt {
            font-weight: 600;
            color: #dc3545;
        }

        dd {
            padding-left: 15px;
        }

        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 10px 20px;
            border-radius: 8px;
        }

        .btn-secondary {
            padding: 10px 20px;
            border-radius: 8px;
            border-color: #dc3545;
            color: #dc3545;
        }

            .btn-secondary:hover {
                background-color: #dc3545;
                color: white;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card detail-card">
                    <div class="card-header py-3">
                        <h2 class="h5 mb-0 text-center">
                            <i class="fas fa-user-circle me-2"></i>Kullanıcı Detayları
                        </h2>
                    </div>
                    <div class="card-body p-4">
                        <dl class="row">
                            <div class="col-12 detail-item">
                                <dt>Ad Soyad</dt>
                                <dd>@Model.AdSoyad</dd>
                            </div>

                            <div class="col-12 detail-item">
                                <dt>Email</dt>
                                <dd>@Model.Email</dd>
                            </div>

                            <div class="col-12 detail-item">
                                <dt>Kullanıcı ID</dt>
                                <dd>@Model.Id</dd>
                            </div>

                            <div class="col-12 detail-item">
                                <dt>Kayıt Tarihi</dt>
                                <dd>@Model.KayitTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
                            </div>
                        </dl>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Düzenle
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>