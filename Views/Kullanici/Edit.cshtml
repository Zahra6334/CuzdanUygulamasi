@model CuzdanUygulamasi.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
   
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background-color: #fff0f0; /* Açık kırmızı arkaplan */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .edit-card {
            max-width: 800px;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.1); /* Kırmızı tonlu gölge */
            border: none;
        }

        .card-header {
            background: linear-gradient(135deg, #dc3545, #bb2d3b); /* Kırmızı gradient */
            color: white;
            border-radius: 10px 10px 0 0 !important;
        }

        .form-control {
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid #f1aeb5;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25); /* Kırmızı focus shadow */
                border-color: #dc3545;
            }

        .input-group-text {
            background-color: #dc3545; /* Kırmızı */
            color: white;
            border: none;
        }

        .btn-primary {
            background-color: #dc3545; /* Kırmızı */
            border-color: #dc3545;
            padding: 10px 20px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #bb2d3b; /* Koyu kırmızı */
                border-color: #bb2d3b;
            }

        .btn-outline-secondary {
            border-color: #dc3545; /* Kırmızı kenarlık */
            color: #dc3545;
        }

            .btn-outline-secondary:hover {
                background-color: #dc3545; /* Kırmızı hover */
                color: white;
            }

        .text-muted {
            color: #dc3545 !important; /* Kırmızı uyarı metni */
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card edit-card">
                    <div class="card-header py-3">
                        <h2 class="h5 mb-0 text-center">
                            <i class="fas fa-user-edit me-2"></i>Kullanıcı Düzenle
                        </h2>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-4">
                                <label class="form-label fw-bold">Ad Soyad</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input asp-for="AdSoyad" class="form-control" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Kullanıcı ID</label>
                                <input asp-for="Id" class="form-control" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input asp-for="SifreHash" type="password" class="form-control" id="passwordField" required />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <small class="text-muted">En az 8 karakter</small>
                            </div>

                            <div class="d-flex justify-content-end gap-3 mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Güncelle
                                </button>
                                <a href="#" class="btn btn-outline-secondary" onclick="history.back()">
                                    <i class="fas fa-times me-2"></i>İptal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <!-- Şifre göster/gizle fonksiyonu -->
    <script>
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordField = document.getElementById('passwordField');
            const icon = this.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        });
    </script>
</body>
</html>