@model CuzdanUygulamasi.Models.Kullanici

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";

}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-red: #d62839;
            --dark-red: #ba1b2d;
            --light-red: #f8e8e8;
            --accent-color: #ff4757;
        }

        body {
            background-color: #fff5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            max-width: 600px;
            margin: 3rem auto;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(214, 40, 57, 0.2);
            background: white;
            position: relative;
            overflow: hidden;
        }

            .form-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 8px;
                background: linear-gradient(90deg, var(--primary-red), var(--accent-color));
            }

        h2 {
            color: var(--primary-red);
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
            padding-bottom: 10px;
        }

            h2::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: var(--accent-color);
            }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary-red);
                box-shadow: 0 0 0 0.25rem rgba(214, 40, 57, 0.25);
            }

        label {
            font-weight: 600;
            color: #555;
            margin-bottom: 8px;
        }

        .btn-success {
            background-color: var(--primary-red);
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            font-weight: 600;
            letter-spacing: 0.5px;
            width: 100%;
            transition: all 0.3s;
            margin-top: 1rem;
        }

            .btn-success:hover {
                background-color: var(--dark-red);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(214, 40, 57, 0.3);
            }

        .input-group-text {
            background-color: var(--primary-red);
            color: white;
            border: none;
        }

        .form-floating > .form-control:focus ~ label {
            color: var(--primary-red);
        }

        .floating-label {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .floating-label label {
                position: absolute;
                top: 12px;
                left: 15px;
                transition: all 0.2s;
                pointer-events: none;
                background: white;
                padding: 0 5px;
                color: #777;
            }

            .floating-label input:focus + label,
            .floating-label input:not(:placeholder-shown) + label {
                top: -10px;
                left: 10px;
                font-size: 0.8rem;
                color: var(--primary-red);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2><i class="fas fa-user-plus me-2"></i>Yeni Kullanıcı Ekle</h2>

            <form asp-action="Create">
                <div class="floating-label">
                    <input asp-for="AdSoyad" class="form-control" placeholder=" " />
                    <label>Ad Soyad</label>
                </div>

                <div class="floating-label">
                    <input asp-for="Email" class="form-control" placeholder=" " />
                    <label>Email Adresi</label>
                </div>

                <div class="floating-label">
                    <input asp-for="SifreHash" type="password" class="form-control" placeholder=" " />
                    <label>Şifre</label>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Floating label functionality
        document.querySelectorAll('.floating-label input').forEach(input => {
            input.addEventListener('focus', function() {
                this.nextElementSibling.style.color = '#d62839';
            });

            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.nextElementSibling.style.color = '#777';
                }
            });
        });
    </script>
</body>
</html>