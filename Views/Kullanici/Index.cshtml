@model IEnumerable<CuzdanUygulamasi.Models.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">
                    <i class="fas fa-users-cog me-2"></i>Kullanıcı Yönetim Paneli
                </h2>
                <a asp-action="Create" class="btn btn-light text-danger">
                    <i class="fas fa-user-plus me-2"></i>Yeni Kullanıcı Ekle
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light-danger">
                        <tr>
                            <th class="ps-4">#ID</th>
                            <th>Kullanıcı</th>
                            <th>İletişim</th>
                            <th>Kayıt Tarihi</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="ps-4 fw-bold text-danger">@item.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar bg-danger text-white rounded-circle me-3"
                                             style="width:40px; height:40px; line-height:40px; text-align:center;">
                                            @item.AdSoyad[0]
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@item.AdSoyad</h6>
                                            <small class="text-muted">@(item.Email.Length > 20 ? item.Email.Substring(0, 20) + "..." : item.Email)</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="d-block">@item.Email</span>
                                    <small class="text-muted">Son giriş: @DateTime.Now.ToString("dd.MM.yy")</small>
                                </td>
                                <td>
                                    <span class="badge bg-danger bg-opacity-10 text-danger">
                                        @item.KayitTarihi.ToString("dd MMM yyyy")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger rounded-start-pill px-3"
                                           data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger px-3"
                                           data-bs-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger rounded-end-pill px-3"
                                           data-bs-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">Toplam <strong>@Model.Count()</strong> kullanıcı bulundu</span>
                </div>
                <div class="col-md-6 text-end">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link bg-danger text-white border-danger" href="#" tabindex="-1">Önceki</a>
                            </li>
                            <li class="page-item active"><a class="page-link bg-danger text-white border-danger" href="#">1</a></li>
                            <li class="page-item"><a class="page-link text-danger" href="#">2</a></li>
                            <li class="page-item"><a class="page-link text-danger" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link text-danger" href="#">Sonraki</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tooltip aktivasyonu
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>

    <style>
        .avatar {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .bg-light-danger {
            background-color: rgba(220, 53, 69, 0.1);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(220, 53, 69, 0.05);
        }

        .rounded-start-pill {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .rounded-end-pill {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    </style>
}