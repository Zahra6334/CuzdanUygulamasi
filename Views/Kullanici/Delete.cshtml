@model CuzdanUygulamasi.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Sil";
   
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cüzdan Uygulaması</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --danger-red: #dc3545;
            --danger-dark: #bb2d3b;
            --light-bg: #f8f9fa;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .confirmation-card {
            max-width: 500px;
            margin: 2rem auto;
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .confirmation-header {
            background: linear-gradient(135deg, var(--danger-red), var(--danger-dark));
            color: white;
            padding: 1.5rem;
            text-align: center;
            font-weight: 600;
            font-size: 1.5rem;
        }

        .confirmation-body {
            padding: 2rem;
            text-align: center;
        }

        .confirmation-icon {
            font-size: 4rem;
            color: var(--danger-red);
            margin-bottom: 1.5rem;
        }

        .confirmation-text {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            color: #495057;
        }

        .user-details {
            background-color: #f1f1f1;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .btn-danger {
            background-color: var(--danger-red);
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-danger:hover {
                background-color: var(--danger-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            }

        .btn-secondary {
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-group {
            gap: 15px;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="confirmation-card">
        <div class="confirmation-header">
            <i class="fas fa-exclamation-triangle me-2"></i>Kullanıcı Silme
        </div>
        <div class="confirmation-body">
            <div class="confirmation-icon">
                <i class="fas fa-user-slash"></i>
            </div>

            <p class="confirmation-text">Bu kullanıcıyı silmek istediğinize emin misiniz?</p>

            <div class="user-details">
                <strong>@Model.AdSoyad</strong><br>
                <small class="text-muted">@Model.Email</small>
            </div>

            <form asp-action="DeleteConfirmed" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Evet, Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>