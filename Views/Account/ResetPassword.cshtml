@using CuzdanUygulamasi.Models.ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
    Layout = null;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center">Şifrenizi Sıfırlayın</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">Şifreyi Sıfırla</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>