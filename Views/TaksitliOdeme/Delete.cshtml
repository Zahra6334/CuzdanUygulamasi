@model CuzdanUygulamasi.Models.TaksitliOdeme

@{
    ViewData["Title"] = "Taksitli Ödeme Sil";
}

<h2>Taksitli Ödeme Sil</h2>

<p>Bu taksitli ödemeyi silmek istediğinize emin misiniz?</p>

<div>
    <strong>Kullanici:</strong> @Model.Kullanici<br />
    <strong>Taksit Sayısı:</strong> @Model.TaksitSayisi
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
