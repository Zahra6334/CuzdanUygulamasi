@model CuzdanUygulamasi.Models.TaksitliOdeme
@{
    ViewData["Title"] = "Taksit Düzenle";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Finans Cüzdanım</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #8B0000;
            --secondary-color: #FF6B6B;
            --dark-color: #333; /* Yazı rengi olarak koyu gri */
            --light-color: #f8f9fa;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --info-color: #17a2b8;
            --border-radius: 12px;
            --box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            color: var(--dark-color); /* Tüm sayfa yazı rengi */
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        header {
            background-color: var(--primary-color);
            color: white;
            padding: 15px 0;
            box-shadow: var(--box-shadow);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .page-header {
            margin: 30px 0 25px;
        }

            .page-header h2 {
                font-size: 28px;
                color: var(--dark-color); /* Başlık rengi */
                font-weight: 600;
                display: flex;
                align-items: center;
            }

                .page-header h2 i {
                    margin-right: 12px;
                    color: var(--primary-color);
                }

        .form-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: var(--dark-color); /* Label rengi */
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: var(--border-radius);
            font-family: 'Poppins', sans-serif;
            font-size: 15px;
            transition: var(--transition);
            color: var(--dark-color); /* Input yazı rengi */
            background-color: white; /* Input arkaplan rengi */
        }

            .form-control:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 3px rgba(139, 0, 0, 0.1);
            }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }

        .btn {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 12px 25px;
            border-radius: var(--border-radius);
            text-decoration: none;
            text-align: center;
            font-weight: 500;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            font-family: 'Poppins', sans-serif;
            font-size: 15px;
        }

            .btn:hover {
                background-color: #7a0000;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(139, 0, 0, 0.2);
            }

        .btn-secondary {
            background-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        /* Para birimi ve yüzde işaretleri için stil */
        .input-symbol {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            color: #777;
        }

        .percent-symbol {
            right: 15px;
        }

        .currency-symbol {
            left: 15px;
        }

        @@media (max-width: 768px) {
            .form-card {
                padding: 20px;
            }

            .btn-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h2><i class="fas fa-edit"></i> Taksitli Ödeme Düzenle</h2>
        </div>

        <div class="form-card">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="TaksitSayisi">Taksit Sayısı</label>
                    <input asp-for="TaksitSayisi" class="form-control" />
                    <span asp-validation-for="TaksitSayisi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FaizOrani">Faiz Oranı</label>
                    <div style="position: relative;">
                        <input asp-for="FaizOrani" class="form-control" />
                        <span class="input-symbol percent-symbol">%</span>
                    </div>
                    <span asp-validation-for="FaizOrani" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ToplamTutar">Toplam Tutar</label>
                    <div style="position: relative;">
                        <span class="input-symbol currency-symbol">₺</span>
                        <input asp-for="ToplamTutar" class="form-control" style="padding-left: 35px;" />
                    </div>
                    <span asp-validation-for="ToplamTutar" class="text-danger"></span>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn">
                        <i class="fas fa-save" style="margin-right: 8px;"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left" style="margin-right: 8px;"></i> Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>