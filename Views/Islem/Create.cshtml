@model CuzdanUygulamasi.Models.Islem

@{
    ViewData["Title"] = "Yeni İşlem Ekle";
}

<h2>Yeni İşlem Ekle</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Tutar</label>
        <input asp-for="Tutar" class="form-control" />
        <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select asp-for="KategoriId" asp-items="@(new SelectList(ViewBag.Kategoriler, "Id", "Ad"))" class="form-select">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="KategoriId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">İşlem Tipi</label>
        <select asp-for="IslemTipi" class="form-select">
            <option value="1">Gelir</option>
            <option value="2">Gider</option>
            <option value="3">Taksit</option>
        </select>
        <span asp-validation-for="IslemTipi" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="TekrarliMi" type="checkbox" class="form-check-input" />
        <label class="form-check-label">Tekrarlı mı?</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Periyot</label>
        <select asp-for="Periyot" class="form-select">
            <option value="">Seçiniz</option>
            <option value="1">Günlük</option>
            <option value="2">Haftalık</option>
            <option value="3">Aylık</option>
            <option value="4">Yıllık</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("Index", "Islem")" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
