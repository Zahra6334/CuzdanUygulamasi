@model CuzdanUygulamasi.Models.Islem

@{
    ViewData["Title"] = "İşlem Detayları";
}

<h2>İşlem Detayları</h2>

<dl class="row">
    <dt class="col-sm-2">Tutar</dt>
    <dd class="col-sm-10">@Model.Tutar.ToString("C2")</dd> <!-- ₺ veya $ formatlı -->

    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.Tarih.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-2">İşlem Tipi</dt>
    <dd class="col-sm-10">@Model.IslemTipi.ToString()</dd>

    <dt class="col-sm-2">Kullanıcı</dt>
    <dd class="col-sm-10">
        @Model.Kullanici?.AdSoyad ?? $"ID: {Model.KullaniciId}"
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Geri</a>
