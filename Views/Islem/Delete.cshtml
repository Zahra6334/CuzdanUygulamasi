@model CuzdanUygulamasi.Models.Islem

@{
    ViewData["Title"] = "İşlem Sil";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-trash-fill"></i> İşlem Sil
            </h4>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Bu işlemi <strong>kalıcı olarak</strong> silmek istediğinize emin misiniz?
            </p>

            <table class="table table-bordered mt-3">
                <tbody>
                    <tr>
                        <th scope="row">Tutar</th>
                        <td>@Model.Tutar.ToString("C2")</td>
                    </tr>
                    <tr>
                        <th scope="row">Açıklama</th>
                        <td>@Model.Aciklama</td>
                    </tr>
                    <tr>
                        <th scope="row">Tarih</th>
                        <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                    </tr>
                    <tr>
                        <th scope="row">İşlem Tipi</th>
                        <td>@Model.IslemTipi</td>
                    </tr>
                </tbody>
            </table>

            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Silme işlemi geri alınamaz!
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> İptal
            </a>
        </div>
    </div>
</div>
