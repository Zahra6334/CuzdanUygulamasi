@model CuzdanUygulamasi.Models.Islem

@{
    ViewData["Title"] = "İşlem Sil";
}

<h2 class="text-danger">İşlem Sil</h2>

<p>Bu işlemi <strong>kalıcı olarak</strong> silmek istediğinize emin misiniz?</p>

<dl class="row">
    <dt class="col-sm-2">Tutar</dt>
    <dd class="col-sm-10">@Model.Tutar.ToString("C2")</dd>

    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.Tarih.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-2">İşlem Tipi</dt>
    <dd class="col-sm-10">@Model.IslemTipi</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
