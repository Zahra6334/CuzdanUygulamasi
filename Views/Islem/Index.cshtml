@model List<CuzdanUygulamasi.Models.Islem>

@{
    ViewData["Title"] = "İşlemler Listesi";
}

<h2>İşlemler</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("Create", "Islem")">Yeni İşlem Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı</th>
            <th>Tutar</th>
            <th>Açıklama</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>İşlem Tipi</th>
            <th>Tekrarlı mı?</th>
            <th>Periyot</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Kullanici?.AdSoyad</td>
                <td>@item.Tutar.ToString("C")</td>
                <td>@item.Aciklama</td>
                <td>@item.Kategori?.Ad</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                <td>@item.IslemTipi</td>
                <td>@(item.TekrarliMi ? "Evet" : "Hayır")</td>
                <td>@item.Periyot</td>
                <td>
                    <form method="post" asp-action="IslemSil" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
