@model List<CuzdanUygulamasi.Models.Islem>

@{
    ViewData["Title"] = "İşlem Listesi";
}

<h2>İşlem Listesi</h2>

<a asp-action="Create" class="btn btn-primary">Yeni İşlem Ekle</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Tutar</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>IslemTipi</th>
            <th>Kullanıcı ID</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var islem in Model)
        {
            <tr>
                <td>@islem.Tutar</td>
                <td>@islem.Aciklama</td>
                <td>@islem.Tarih.ToShortDateString()</td>
                <td>@islem.IslemTipi</td>
                <td>@islem.KullaniciId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@islem.Id">Detay</a> |
                    <a asp-action="Edit" asp-route-id="@islem.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@islem.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
